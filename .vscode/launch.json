    "version": "0.2.0",
    "configurations": [
        {
            "name": "app_srvc: Win Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app_srvc.webapp",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "--port", "8080",
            ],
            "jinja": true
        }

    ]
}